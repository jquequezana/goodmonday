.row
	.span6
		%table.table.table-striped.table-bordered.table-condensed
			%thead
				%tr
					%th Дата
					%th Клики
					%th Цели
					%th Доход
					%th PPC
					%th CPC
			%tbody
				- @stats.each do |stat|
					%tr
						%td= stat['date'].strftime('%d/%m/%Y')
						%td= stat['click_count'].to_i
						%td= stat['target_count'].to_i
						%td= number_to_rubles stat['income_count']
						%td= stat['target_count']/stat['click_count']
						%td= number_to_rubles (stat['income_count']/stat['click_count'])
	.span3
		.well
			%b Баланс:
			= number_to_rubles @current_user.balance
			%br
			%b Ожидается:
			= number_to_rubles @current_user.balance
			%br