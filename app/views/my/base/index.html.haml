.row
	.span6
		%h5 Сводная информация
		%br
		%table.table.table-striped.table-bordered
			%thead
				%tr
					%th
					%th Сегодня
					%th Вчера
					%th Неделя
					%th Месяц
					%th Всего
			%tbody
				%tr
					- subject = :click
					%th Клики
					%td= @common_stat[subject][:today]
					%td= @common_stat[subject][:yesterday]
					%td= @common_stat[subject][:week]
					%td= @common_stat[subject][:month]
					%td= @common_stat[subject][:total]
				%tr
					- subject = :target
					%th Цели
					%td= @common_stat[subject][:today]
					%td= @common_stat[subject][:yesterday]
					%td= @common_stat[subject][:week]
					%td= @common_stat[subject][:month]
					%td= @common_stat[subject][:total]
				%tr
					- subject = :income
					%th Доход
					%td= number_to_currency(@common_stat[subject][:today]/100)
					%td= number_to_currency(@common_stat[subject][:yesterday]/100)
					%td= number_to_currency(@common_stat[subject][:week]/100)
					%td= number_to_currency(@common_stat[subject][:month]/100)
					%td= number_to_currency(@common_stat[subject][:total]/100)

		- if @current_user.is_a? Webmaster
			%h5 Ваша реферальная ссылка
			= "http://goodmonday.ru/ref/#{@current_user.id}"
	.span3
		.well
			%b= @current_user.email
			%br
			%br
			%span.label=t "model.#{@current_user.class.to_s}"
			-#- if @current_user.is_a? Webmaster
			-#	%br
			-#	%b Статус:
			-#	=t "mongoid.symbolizes.user.rank.#{@current_user.rank}"
			%hr
			%h6 Баланс
			%br
			%b Доступно:
			= number_to_currency @current_user.balance
			%br
			%b Ожидается:
			= number_to_currency @current_user.hold_balance
			%br
			- if @current_user.class==Advertiser && @current_user.overdraft>0
				%b Допустимый кредит:
				= number_to_currency @current_user.overdraft
				%br
			%b Всего выплат:
			= number_to_currency @current_user.total_payments
			%br
			- if @current_user.is_a? Webmaster
				%hr
				%h6 Статистика рефералов
				%br
				%b Начислено:
				= number_to_currency @current_user.referal_total_payments
				%br
				%b Количество рефералов:
				= @current_user.referal_count