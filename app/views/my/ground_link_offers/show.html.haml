	= "http://r.goodmonday.ru/#{@ground.id}/goto/#{@offer.id}"

%b= 'Полный код для вставки:'
%br
%br
%pre.prettyprint
	= "<a href='http://r.goodmonday.ru/#{@ground.id}/goto/#{@offer.id}'>"
