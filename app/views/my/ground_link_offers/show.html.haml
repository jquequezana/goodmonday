	= "<a href='http://r.goodmonday.ru/#{@ground.id}/goto/#{@offer.id}?sub_id="
	= content_tag(:span, 'ваш_sub_id', :class => "str")
	= "'>"
	= content_tag(:span, 'Текст ссылки', :class => "atn")
