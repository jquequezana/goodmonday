%section
	.page-header
		%h1= 'Площадки'
	.row
		= render 'my/sidebar'
		.span9
			%table.table.table-bordered.table-striped
				%thead
					%tr
						%th= 'Название'
						%th= 'Тип'
						%th= 'Тематика'
						%th= 'Статус'
						%th= 'Действия'
				%tbody
					- @ground_offers.each do |ground_offer|
						%tr
							%td= ground_offer.ground.title
							%td= t(ground_offer.ground.type)
							%td= ground_offer.ground.category.title
							%td= t(ground_offer.state)
							%td
								- unless ground_offer.state==:accepted
									= link_to my_offer_ground_accept_path(@offer, ground_offer), :class => 'btn btn-success btn-small' do
										%i.icon-ok.icon-white
										= 'Одобрить'
								- unless ground_offer.state==:denied
									= link_to my_offer_ground_deny_path(@offer, ground_offer), :class => 'btn btn-danger btn-small' do
										%i.icon-remove.icon-white
										= 'Отказать'