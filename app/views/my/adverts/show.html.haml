%section
	.page-header
		%h1= "Объявление"
	.row
		= render 'my/sidebar'
		.span9
			- case @advert.class
				- when Banner
					%p
						%b= 'URL: '
						= @advert.url
			%hr
			- case @advert.class
				- when Banner
					%h2= 'Изображения'
					%table.table.table-bordered.table-striped
						%thread
							%tr
								%th= 'Предпросмотр'
								%th= 'Размер'
								%th= 'Дополнительно'
								%th= 'Действия'
						%tbody
							- @advert.banner_images.each do |banner_image|
								%tr
									%td= image_tag banner_image.image
									%td= banner_image.size
									%td
										= 'Создано автоматически' if banner_image.auto_generated
									%td
										= link_to my_offer_advert_banner_image_path(@offer, @advert, banner_image), :class => 'btn btn-small btn-danger', :method => :delete, :confirm => "Вы уверены?" do
											%i.icon-trash.icon-white
											= 'Удалить'
					= simple_form_for(@advert.banner_images.new, :url => my_offer_advert_banner_images_path(@offer, @advert), :html => {:class => 'form-inline' }) do |f|
						= f.input :size, :as => :select, :collection => ADVERTS_SIZES, :input_html => { :class => "inline" }, :wrapper_html => { :class => "inline" }
						= f.input :image, :as => :file, :input_html => { :class => "inline" }, :wrapper_html => { :class => "inline" }
						= f.button :submit, :class => 'btn-primary'