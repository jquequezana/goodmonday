%table.table.table-bordered.table-striped
	%thead
		%tr
			%th= 'Логотип'
			%th= 'Название'
			%th= 'Категория'
			%th= 'Выплачено'
			%th= 'EPC'
			%th= 'Цели'
			%th
	%tbody
		- @offers.each do |offer|
			%tr{:class => offer.is_accepted? ? '' : 'muted'}
				%td
					- if offer.logo.present?
						%ul.thumbnails
							%li
								.thumbnail= image_tag offer.logo
				%td= offer.title
				%td= offer.category.title
				%td= offer.epc
				%td= number_to_currency offer.payments
				%td= offer.targets.count
				%td
					= link_to offer_path(offer), :class => 'btn btn-small' do
						-#%i.icon-screenshot
						= 'Открыть'
