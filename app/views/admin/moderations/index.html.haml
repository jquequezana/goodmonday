.page-header
	%h1= 'Объекты для проверки'
%ul.nav.nav-tabs
	%li.active
		%a{"data-toggle" => "tab", :href => "#pending"}= 'Ожидающие'
	%li
		%a{"data-toggle" => "tab", :href => "#accepted"}= 'Одобренные'
	%li
		%a{"data-toggle" => "tab", :href => "#denied"}= 'Отклонённые'
.tab-content
	#pending.tab-pane.fade.active.in
		.page-header
			%h2
				= 'Ожидающие'
				%small= "(#{@moderations_pending.size})"
		%table.table.table-bordered.table-striped
			%thead
				%tr
					%th= 'Тип'
					%th= 'Причина'
					%th= 'Статус'
					%th= 'Дата'
					%th= 'Действия'
			%tbody
				- @moderations_pending.each do |moderation|
					%tr
						%td= moderation.moderated_type
						%td=t "common.reason.#{moderation.reason.to_s}"
						%td= state_label moderation.state
						%td= moderation.updated_at
						%td
							= link_to moderation_path(moderation), :class => 'btn btn-small' do
								%i.icon-cog
								= 'Открыть'
