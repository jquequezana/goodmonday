%pre.prettyprint
	= "<script language='javascript'>"
	= tag(:br)
	:escaped
		document.write("<"+"script language='javascript' src='http://r.goodmonday.ru/#{@offer.id}/visit.js?n="+Math.random()+"'></"+"script>")
