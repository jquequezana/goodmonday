%table.table.table-bordered.table-striped
	%thead
		%tr
			%th= 'E-mail'
			%th= 'Баланс'
			%th= 'Ожидаемый баланс'
			%th= 'Овердрафт'
			%th= 'Его'
	%tbody
		- @users.each do |user|
			%tr
				%td= user.email
				%td= number_to_currency user.balance
				%td= number_to_currency user.hold_balance
				%td= number_to_currency user.overdraft
				%td
					= link_to user_offers_path(user), :class => 'btn btn-small' do
						%i.icon-inbox
						= 'Офферы'